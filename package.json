{
  "name": "loopback-async-workers",
  "version": "1.0.8",
  "description": "This module provides a component for cron integration and asynchronous execution of scripts using LoopBack 4. It is designed to leverage the robust LoopBack framework for scheduling and executing worker jobs reliably and efficiently.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "start:dev": "ts-node src/run.ts",
    "start": "ts-node src/__tests__/worker.test.ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest --watch --verbose false --config jestconfig.json"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DevelBlockchain/loopback-async-workers.git"
  },
  "keywords": [
    "loopback",
    "cron",
    "worker",
    "workers",
    "async",
    "job",
    "tasks"
  ],
  "author": "Devel Blockchain",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/DevelBlockchain/loopback-async-workers/issues"
  },
  "homepage": "https://github.com/DevelBlockchain/loopback-async-workers#readme",
  "dependencies": {
    "@loopback/core": "^6.1.4",
    "cron": "^3.2.1"
  },
  "devDependencies": {
    "@loopback/build": "^11.0.6",
    "@types/cron": "^2.4.3",
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^5.6.3"
  }
}
